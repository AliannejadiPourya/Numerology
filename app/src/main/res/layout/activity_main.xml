<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#000000" android:padding="10dp" android:paddingLeft="10dp" android:paddingRight="10dp"
            android:paddingBottom="10dp" android:paddingTop="10dp" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.061"
            app:layout_constraintHorizontal_bias="0.495"/>
    <TextView
            android:text="@string/Ask_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="60dp" app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp"
            android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp"
            android:textColor="#000000" android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.495"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/favoriteNumberInput"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/birthday_19840206"
            android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp"
            android:paddingBottom="10dp"

            android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.004" android:autofillHints=""/>
    <Button
            android:text="@string/submite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:id="@+id/submitButton"
            app:layout_constraintTop_toBottomOf="@+id/favoriteNumberInput"
            android:layout_marginTop="52dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textres"
            android:padding="10dp" android:paddingLeft="10dp"
            android:paddingTop="10dp" android:paddingRight="10dp" android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/submitButton" android:layout_marginTop="80dp"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:text=" " app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.457" app:layout_constraintVertical_bias="0.712"
            android:fontFamily="sans-serif-light"/>
</androidx.constraintlayout.widget.ConstraintLayout>